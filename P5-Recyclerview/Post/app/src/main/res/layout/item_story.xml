<?xml version="1.0" encoding="utf-8"?>
<!-- Layout untuk satu item di RecyclerView Stories (horizontal) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="8dp">

    <!-- Gunakan ShapeableImageView untuk gambar profil bulat -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_story_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        tools:src="@drawable/ic_profile_1" />

    <TextView
        android:id="@+id/tv_story_username"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:text="username_panjang" />
</LinearLayout>
